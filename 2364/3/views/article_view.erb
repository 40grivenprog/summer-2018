<%= erb :base %>
<body class='container'>
<p><a href='/'>Back</a></p>
<p><form action='/article/delete/<%= @article.id %>' method="post">
<button class="btn btn-sm btn-primary" type="submit" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
</form></p>
<h1><%= @article.title %></p></h1>
<table class="table">
   <caption>Comments</caption>
   <tr>
    <th>Comment text</th>
    <th>Rating</th>
   </tr>
   <% @article.comments.each do |comment| %>
       <tr><td><p><%= comment.text %></a></p></td><td><%= comment.rating %></td></tr>
   <% end %>
</table>
<p><a href='<%=@article.link %>'><%=@article.link %></a></p>
</body>